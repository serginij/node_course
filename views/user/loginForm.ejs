<form method="POST" class='mt-3' id='loginForm'>
  <div class="form-group">
      <label>Username</label>
      <input type="text" name="username" required class="form-control" />
  </div>
  <div class="form-group">
      <label>Password</label>
      <input type="password" name="password" required class="form-control" />
  </div>
  <%if (!isLogin) { %>
    <div class="form-group">
      <label>Display name</label>
      <input type="text" name="displayName" required class="form-control" />
    </div>
    <div class="form-group">
      <label>Email</label>
      <input type="email" name="email" class="form-control" />
    </div>
  <% } %>
  <input type="submit" value="Submit" id='login-btn' class="btn btn-md btn-primary" />
</form>
<script>
  const isLogin = <%= isLogin || false %>;
  document.getElementById('login-btn').value = isLogin ? 'Log in' : "Sign up";
</script>
